[Unit]
Description=JIRA Project Management Tool
After=network.target

[Service]
Type=forking
User={{ jira_user }}
PIDFile=/opt/atlassian/jira/{{ jira_version }}/work/catalina.pid
EnvironmentFile=-/etc/sysconfig/jira
ExecStart=/opt/atlassian/jira/{{ jira_version }}/bin/start-jira.sh
ExecStop=/opt/atlassian/jira/{{ jira_version }}/bin/stop-jira.sh

[Install]
WantedBy=multi-user.target
